{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "overrides": [
        { "files": "*.yaml", "options": { "tabWidth": 2 } },
        { "files": "*.json", "options": { "printWidth": 130 } },
        { "files": "*.md", "options": { "tabWidth": 2 } }
    ]
}
